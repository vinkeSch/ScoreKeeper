<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zeroLayout"
    android:background="#3A405A"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchFragment">

    <TextView
        android:id="@+id/textPointsA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:layout_above="@id/layoutNameA"
        android:text="@string/zero"
        android:gravity="center"
        android:textColor="@color/colorA"
        android:textSize="160sp"
        android:fontFamily="@font/nunito_sans_reguler"/>

    <LinearLayout
        android:id="@+id/layoutNameA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBottom="@id/secondView"
        android:layout_marginBottom="@dimen/margin_small"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/ballA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_sports_baseball_30"
            android:contentDescription="@string/ball" />

        <TextView
            android:id="@+id/textPlayerA"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@null"
            android:fontFamily="@font/nunito_sans_reguler"
            android:inputType=""
            android:layout_marginStart="@dimen/margin_medium"
            android:text="@string/player_a"
            android:textColor="@color/colorA"
            android:textSize="@dimen/text_title_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_medium"
            tools:ignore="RelativeOverlap,RtlSymmetry">

            <TextView
                android:id="@+id/textSet1A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_reguler"
                android:layout_marginEnd="@dimen/margin_medium"
                android:text="@string/zero"
                android:textColor="@color/colorText"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textSet2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_reguler"
                android:layout_marginEnd="@dimen/margin_medium"
                android:text="@string/zero"
                android:textColor="#E9ECF5"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textSet3A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_reguler"
                android:layout_marginEnd="@dimen/margin_medium"
                android:text="@string/zero"
                android:textColor="#E9ECF5"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textSet4A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_reguler"
                android:layout_marginEnd="@dimen/margin_medium"
                android:text="@string/zero"
                android:textColor="#E9ECF5"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textSet5A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="#E9ECF5"
                android:fontFamily="@font/nunito_sans_reguler"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

        <View
            android:id="@+id/secondView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_centerInParent="true"
            android:background="#E9ECF5"/>

    <LinearLayout
        android:id="@+id/layoutNameB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondView"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/ballB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_sports_baseball_30"
            android:contentDescription="@string/ball" />

        <TextView
            android:id="@+id/textPlayerB"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:autofillHints=""
            android:background="@null"
            android:fontFamily="@font/nunito_sans_reguler"
            android:inputType=""
            android:text="@string/player_b"
            android:textColor="@color/colorB"
            android:textSize="@dimen/text_title_size" />

        <LinearLayout
            android:id="@+id/setScoreB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/textSet1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium"
                android:text="@string/zero"
                android:fontFamily="@font/nunito_sans_reguler"
                android:textColor="#E9ECF5"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textSet2B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium"
                android:fontFamily="@font/nunito_sans_reguler"
                android:text="@string/zero"
                android:textColor="@color/colorText"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textSet3B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium"
                android:fontFamily="@font/nunito_sans_reguler"
                android:text="@string/zero"
                android:textColor="#E9ECF5"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textSet4B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium"
                android:fontFamily="@font/nunito_sans_reguler"
                android:text="@string/zero"
                android:textColor="#E9ECF5"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textSet5B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_reguler"
                android:text="@string/zero"
                android:textColor="#E9ECF5"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textPointsB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutNameB"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/zero"
        android:gravity="center"
        android:textColor="@color/colorB"
        android:textSize="160sp"
        android:fontFamily="@font/nunito_sans_reguler"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_replay_30"
            tools:ignore="ContentDescription"/>

        <ToggleButton
            android:id="@+id/buttonSpeech"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/image_mute" />

        <ImageView
            android:id="@+id/iconRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_loop_30"
            tools:ignore="ContentDescription"/>
    </LinearLayout>
</RelativeLayout>

