<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zeroLayout"
    android:background="#3A405A"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/secondView"
        android:layout_marginEnd="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textPlayerA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="16dp"
                android:autofillHints=""
                android:background="@null"
                android:fontFamily="sans-serif-medium"
                android:inputType=""
                android:text="@string/player_a"
                android:textColor="#99B2DD"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ballA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginStart="40dp"
                app:srcCompat="@drawable/ic_baseline_sports_baseball_30"
                android:contentDescription="@string/ball" />


        </LinearLayout>

        <TextView
            android:id="@+id/textPointsA"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:text="@string/zero"
            android:textAlignment="center"
            android:textColor="#99B2DD"
            android:textSize="140sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingEnd="60dp"
        android:orientation="vertical"
        tools:ignore="RelativeOverlap,RtlSymmetry">

        <TextView
            android:id="@+id/textSet1A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="@string/_21"
            android:textColor="@color/colorText"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textSet2A"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textColor="#E9ECF5"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textSet3A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_21"
            android:textColor="#E9ECF5"
            android:layout_gravity="center"
            android:textSize="30sp" />
    </LinearLayout>

    <View
        android:id="@+id/secondView"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="30dp"
        android:background="#E9ECF5"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingStart="60dp"
        android:orientation="vertical"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/textSet1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/_21"
            android:textColor="#E9ECF5"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textSet2B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="@string/_21"
            android:textColor="@color/colorText"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textSet3B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/_21"
            android:textColor="#E9ECF5"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/secondView"
        android:layout_marginStart="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textPlayerB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="16dp"
                android:autofillHints=""
                android:background="@null"
                android:fontFamily="sans-serif-medium"
                android:inputType=""
                android:text="@string/player_b"
                android:textColor="#E9AFA3"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ballB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginStart="40dp"
                app:srcCompat="@drawable/ic_baseline_sports_baseball_30"
                android:contentDescription="@string/ball" />

        </LinearLayout>

        <TextView
            android:id="@+id/textPointsB"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:text="@string/zero"
            android:textAlignment="center"
            android:textColor="#E9AFA3"
            android:textSize="140sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_replay_30"
            tools:ignore="ContentDescription"/>

        <ToggleButton
            android:id="@+id/imageVolume"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/image_mute" />

        <ImageView
            android:id="@+id/imageLoop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_loop_30"
            tools:ignore="ContentDescription"/>
    </LinearLayout>

</RelativeLayout>
